<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btnMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monthly Task"
        android:textSize="15dp"
        android:background="#FFFFFF"
        android:textAlignment="viewStart"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:drawableRight="@drawable/ic_baseline_calendar_today_24"/>
    <Button
        android:id="@+id/btnQuar"
        android:layout_below="@+id/btnMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quarterly Task"
        android:textSize="15dp"
        android:background="#FFFFFF"
        android:textAlignment="viewStart"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:drawableRight="@drawable/ic_baseline_assignment_24"/>

    <Button
        android:id="@+id/btnAnnual"
        android:layout_below="@+id/btnQuar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Annual Task"
        android:textSize="15dp"
        android:background="#FFFFFF"
        android:textAlignment="viewStart"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:drawableRight="@drawable/ic_baseline_ballot_24"/>

</RelativeLayout>